<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rank_comic_item_parent"
    style="@style/Widget.Material3.CardView.Filled"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:maxHeight="250dp"
    android:orientation="vertical"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/rank_comic_thumb"
            android:layout_width="140dp"
            android:layout_height="220dp"
            android:contentDescription="@string/app_name"
            android:maxHeight="250dp"
            android:minHeight="200dp"
            android:scaleType="centerCrop"
            tools:ignore="ImageContrastCheck" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="7dp">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/rank_comic_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeMaxTextSize="23sp"
                android:autoSizeMinTextSize="16sp"
                android:autoSizeTextType="uniform"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@string/app_name"
                android:textSize="19sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rank_comic_author"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="@string/app_name"
                android:textSize="15sp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/rank_comic_tags_list"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="1"
                app:chipSpacingVertical="2dp"
                android:clickable="false"
                android:contextClickable="false" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/decs_leader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/point_count" />

                <TextView
                    android:id="@+id/rank_comic_leaderboard_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="@string/app_name"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>